<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>

<h1><storong>Books</storong></h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
    </tr>
  <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td><%= link_to "Show", book_path(book) %></td>
      <td><%= link_to "Edit", edit_book_path(book) %></td>
     <td><%= link_to "Destroy", destroy_book_path(book), method: :delete, data: { confirm: "Are you sure?" }  %></td>

    </tr>
  <% end %>
  </thead>
</table>



